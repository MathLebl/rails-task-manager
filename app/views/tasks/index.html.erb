<h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <input class="fa fa-square-o" type="checkbox" <%= task.completed == true ? 'checked' : nil %>>
        <a href="/tasks/<%= task.id %>"><%= task.title%> </a>

        <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      </li>
    <% end %>
  </ul>



<hr>

<%= link_to tasks_new_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>
